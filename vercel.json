{
  "version": 2,
  "builds": [
    {
      "src": "api/webhook.py",
      "use": "@vercel/python@3.1.0",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/webhook",
      "dest": "/api/webhook.py",
      "methods": ["POST"]
    }
  ],
  "env": {
    "TELEGRAM_TOKEN": "@telegram-token",
    "TELEGRAM_CHAT_ID": "@telegram-chat-id"
  }
} 